@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"].</h1>

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Request.EmailAddress" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Request.EmailAddress" class="form-control" />
            <span asp-validation-for="Request.EmailAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Request.Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Request.Password" class="form-control" />
            <span asp-validation-for="Request.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Request.PasswordConfirm" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Request.PasswordConfirm" class="form-control" />
            <span asp-validation-for="Request.PasswordConfirm" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
