@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-12">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Request.Username" class="control-label"></label>
                    <input asp-for="Request.Username" class="form-control" autocomplete="on" />
                    <span asp-validation-for="Request.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Request.Password" class="control-label"></label>
                    <input asp-for="Request.Password" class="form-control" />
                    <span asp-validation-for="Request.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                </p>
            </form>
        </section>
    </div>
</div>